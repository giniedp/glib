doctype html
html(lang="en")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/slate/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/themes/prism-okaidia.min.css")

    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.0/showdown.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/prism.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/components/prism-typescript.min.js')

    style.

      ::-webkit-scrollbar {
        width: 5px;
        height: 5px;
      }
      ::-webkit-scrollbar-button {
        width: 0px;
        height: 0px;
      }
      ::-webkit-scrollbar-thumb {
        background: #1c2128;
        border: 1px solid #2d333b;
        border-radius: 0px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #20262e;
      }
      ::-webkit-scrollbar-thumb:active {
        background: #20262e;
      }
      ::-webkit-scrollbar-track {
        background: transparent;
        border: none;
        border-radius: 0px;
      }
      ::-webkit-scrollbar-track:hover {
        background: transparent;
      }
      ::-webkit-scrollbar-track:active {
        background: transparent;
      }
      ::-webkit-scrollbar-corner {
        background: transparent;
      }

      * {
        scrollbar-color: #20262e #1c2128;
      }

      :not(pre)>code[class*=language-], pre[class*=language-] {
        background: none;
      }
      section > h1 {
        margin: 1.5rem;
        text-transform: uppercase;
        float: right;
      }
      .example-preview {
        width: 100%;
        padding-top: 42.8%;
        position: relative;
        overflow: hidden;
      }

      .example-preview > iframe {
        border: none;
        margin: none;
        padding: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }

      ul.annotated-code {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      li.annotated-section {
        display: flex;
        flex-flow: row nowrap;
        margin: 0;
        padding: 0;
      }
      li.annotated-section > .annotation {
        box-sizing: border-box;
        position: relative;
        border-right: 1px solid #2d333b;
        user-select: none;
      }

      li.annotated-section  > .annotation + pre {
        flex: 1;
        padding-bottom: 1.5rem;
      }

      @media (min-device-width: 768px) {
        ul.annotated-code li.annotated-section > .annotation {
          box-sizing: content-box;
          min-width: 500px;
          max-width: 500px;
          padding-left: 3rem;
          padding-right: 1.5rem;
          padding-top: 1.5rem;
        }

        ul.annotated-code li.annotated-section > pre {
          min-width: 50vw;
        }
      }

      @media (max-device-width: 767px) {
        ul.annotated-code li.annotated-section > .annotation {
          box-sizing: content-box;
          min-width: 90vw;
          max-width: 90vw;
          padding-left: 1.5rem;
          padding-right: 1.5rem;
          padding-top: 1.5rem;
        }

        ul.annotated-code li.annotated-section > pre {
          min-width: 100vw;
        }
      }

body.d-flex.flex-column(style="position: absolute; top:0; right:0; bottom: 0; left:0")
  block content
  script(src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous")
  block script
