extends /_layouts/_example
block style
  style().
    body {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      overflow: hidden;
      padding: 0;
      margin: 0;
    }
    .capture-pane {
      cursor: none;
      position: relative;
      width: 100%;
      height: 100%;
      background: #dedede;
    }
    .cursor {
      pointer-events: none;
      position: absolute;
      width: 3rem;
      height: 3rem;
      background: red;
      border: 0px solid;
      border-radius: 50%;
      box-shadow: 0px 0px 2px 1px rgba(0,0,0,0.5);
    }
    pre {
      margin: 0;
      padding: 1rem;
    }
    code {
      color: #585858;
    }
block content
  .capture-pane(oncontextmenu="return false")
    .cursor
    pre: code

block append script
  script(type='text/javascript' src='./index.js')
