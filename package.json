{
  "name": "glib",
  "version": "0.1.3",
  "private": true,
  "description": "A Web GL Framework",
  "main": "dist/packages/index.js",
  "module": "dist/packages/index.js",
  "es2015": "dist/packages/index.js",
  "typings": "dist/packages/index.d.ts",
  "scripts": {
    "test": "karma start --single-run",
    "test:watch": "karma start --no-single-run --auto-watch",
    "test:coverage": "IS_COVERAGE=yes karma start --single-run",
    "test:coveralls": "IS_COVERAGE=yes karma start --single-run && cat ./coverage/lcov/lcovonly | ./node_modules/.bin/coveralls",
    "build": "gulp build",
    "lint": "tslint -p packages/tsconfig.json -c tslint.json",
  },
  "repository": {
    "type": "git",
    "url": "github.com/giniedp/glib.git"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^5.5.1",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.17",
    "@types/webgl2": "^0.0.1",
    "benchmark": "^2.1.4",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.8",
    "inflection": "^1.10.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.7.0",
    "jslint": "^0.11.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-typescript": "^3.0.12",
    "rollup": "^0.56.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "shelljs": "^0.8.1",
    "through-gulp": "^0.5.0",
    "tslint": "^5.5.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2"
  },
  "keywords": [
    "webgl",
    "2d",
    "3d",
    "graphics"
  ],
  "author": "Alexander Graefenstein",
  "license": "MIT",
  "dependencies": {}
}
