{
  "name": "glib",
  "version": "1.0.0",
  "description": "A Web GL Framework",
  "main": "dist/glib.js",
  "scripts": {
    "test": "IS_TEST=yes karma start --single-run",
    "test:watch": "IS_TEST=yes karma start --no-single-run --auto-watch",
    "test:coverage": "IS_COVERAGE=yes karma start --single-run",
    "test:coveralls": "IS_COVERAGE=yes IS_COVERALLS=yes karma start --single-run",
    "tdd": "IS_COVERAGE=yes karma start  --no-single-run --auto-watch",
    "build": "webpack --progress",
    "watch": "webpack -w --progress",
    "tsc": "tsc -p framework/tsconfig.json",
    "tsc:watch": "tsc -p framework/tsconfig.json -w",
    "lint": "tslint -p framework/tsconfig.json -c tslint.json",
    "docs": "typedoc --out dist/docs --tsconfig framework/tsconfig.json --ignoreCompilerErrors --hideGenerator --mode modules"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "files": [
    "dist/",
    "LICENCE"
  ],
  "devDependencies": {
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.8",
    "@types/webgl2": "^0.0.1",
    "awesome-typescript-loader": "^3.2.1",
    "benchmark": "^2.1.4",
    "inflection": "^1.10.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.6.4",
    "jslint": "^0.10.3",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-istanbul-preprocessor": "0.0.2",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript-preprocessor2": "^1.2.1",
    "karma-webpack": "^2.0.4",
    "phantomjs-prebuilt": "^2.1.14",
    "remap-istanbul": "^0.9.5",
    "tslint": "^5.5.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.1",
    "webpack": "^3.1.0"
  },
  "keywords": [],
  "author": "Alexander Graefenstein",
  "license": "MIT"
}
