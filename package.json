{
  "name": "glib",
  "version": "1.0.0",
  "description": "A Web GL Framework",
  "main": "dist/glib.js",
  "scripts": {
    "test": "IS_TEST=yes karma start --single-run --fail-on-empty-test-suite",
    "test:watch": "IS_TEST=yes karma start  --no-single-run --fail-on-empty-test-suite --auto-watch",
    "test:coverage": "IS_COVERAGE=yes karma start --single-run --fail-on-empty-test-suite",
    "webpack": "webpack --progress",
    "webpack:watch": "webpack -w --progress",
    "tsc": "tsc -p framework/tsconfig.json",
    "tsc:watch": "tsc -p framework/tsconfig.json -w",
    "lint": "tslint -p framework/tsconfig.json -c tslint.json",
    "docs": "typedoc --out dist/docs --tsconfig framework/tsconfig.json --ignoreCompilerErrors --mode file"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "files": [
    "dist/",
    "LICENCE"
  ],
  "devDependencies": {
    "@types/jasmine": "^2.5.47",
    "@types/node": "^7.0.29",
    "awesome-typescript-loader": "^3.1.3",
    "benchmark": "^2.1.4",
    "inflection": "^1.10.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "2.5.2",
    "jslint": "^0.10.3",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-istanbul-preprocessor": "0.0.2",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript-preprocessor2": "^1.2.1",
    "karma-webpack": "^2.0.3",
    "phantomjs-prebuilt": "^2.1.14",
    "remap-istanbul": "^0.9.5",
    "tslint": "^5.4.3",
    "typedoc": "^0.7.1",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "keywords": [],
