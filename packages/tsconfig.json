{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "moduleResolution": "node",
    "incremental": true,
    "outDir": "../dist/packages",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "paths": {
      "@gglib/*": ["./*"]
    },
    "rootDir": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "lib": ["es6", "dom", "es2015.promise", "es2015.collection", "es2015.iterable"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules",
      "../types"
    ],
    "types": [
      "@types/jasmine",
      "@types/webgl2",
      "gpuweb",
      "webxr"
    ]
  },
  "exclude": [

  ]
}
